{
  "name": "imperium",
  "version": "1.0.0",
  "description": "Landing page for Imperium Gym",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss public/style.css -w",
    "devserver": "live-server --open=public --entry-file=index.html",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css public/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joaquinox/imperium.git"
  },
  "author": "Samuel Jones",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/joaquinox/imperium/issues"
  },
  "homepage": "https://github.com/joaquinox/imperium#readme",
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "concat": "^1.0.3",
    "live-server": "^1.2.1",
    "node-sass": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1"
  }
}
